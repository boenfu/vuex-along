{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2015",
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "listFiles": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "lib": ["es6", "es2015", "dom", "scripthost"]
  },
  "include": ["src"]
}
